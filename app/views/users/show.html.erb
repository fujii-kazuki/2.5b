<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>

      <h2>投稿数の前日比・前週比</h2>
      <%= render 'books/compare', type: '日', books1: @today_books, books2: @yesterday_books %>
      <%= render 'books/compare', type: '週', books1: @this_week_books, books2: @last_week_books %>
    </div>
  </div>
</div>
