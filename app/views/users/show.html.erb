<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>

      <h3>投稿数の前日比・前週比</h3>
      <%= render 'books/compare', type: '日', books1: @books.created_days_ago(0), books2: @books.created_days_ago(1) %>
      <%= render 'books/compare', type: '週', books1: @books.created_this_week, books2: @books.created_last_week %>

      <h3>7日間分の投稿数</h3>
      <%= render 'books/this_week_books', books: @books %>

      <canvas id="booksChart"
      <% (0..6).each do |n| %>
        <%= "data-created-#{n}day-ago-books-count=#{@books.created_days_ago(n).count}" %>
      <% end %> class="mb-5">
      </canvas>

      <%= form_with url: user_search_path(@user), method: :get, local: false do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: 'btn btn-primary' %>
      <% end %>

      <div id="serachResult"></div>
    </div>
  </div>
</div>
