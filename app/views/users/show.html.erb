<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>

      <h2>投稿数の前日比・前週比</h2>
      <%= render 'books/compare', type: '日', books1: @books.created_today, books2: @books.created_yesterday %>
      <%= render 'books/compare', type: '週', books1: @books.created_this_week, books2: @books.created_last_week %>

      <h3>7日間分の投稿数</h3>
      <%= render 'books/this_week_books', books: @books %>
    </div>
  </div>
</div>
